@model IEnumerable<ZeroHungerAssignment.EF.Models.Food>

@{
    ViewBag.Title = "Sent";
}

<h2>PlaceRequest</h2>

@if (TempData["Msg"] != null)
{
    <h1 class="alert @TempData["Color"]">@TempData["Msg"]</h1>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>


        </tr>
    }
    <tr>
        <td>
            <a class="btn btn-success" href="/Restaurant/Sent">Confirm</a>
        </td>
    </tr>

</table>


